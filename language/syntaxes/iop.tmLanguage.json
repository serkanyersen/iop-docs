{
  "name": "iop",
  "scopeName": "source.iop",
  "fileTypes": [
    ".intent"
  ],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "name": "keyword.control.iop",
      "match": ""
    },
    {
      "name": "string.quoted.delimiter.iop",
      "begin": "\"\"\"",
      "end": "\"\"\"",
      "patterns": [
        {
          "include": "#string-character-escape"
        }
      ]
    },
    {
      "name": "string.quoted.double.iop",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "include": "#string-character-escape"
        }
      ]
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.iop",
          "begin": "/\\*",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.comment.iop"
            }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.comment.iop"
            }
          }
        },
        {
          "begin": "//",
          "beginCaptures": {
            "1": {
              "name": "punctuation.whitespace.comment.leading.iop"
            }
          },
          "end": "(?=$)",
          "name": "comment.line.iop"
        }
      ]
    },
    "string-character-escape": {
      "name": "constant.character.escape.iop",
      "match": "\\\\(x[0-9A-Fa-f]{2}|u[0-9A-Fa-f]{4}|u\\{[0-9A-Fa-f]+\\}|[0-2][0-7]{0,2}|3[0-6][0-7]?|37[0-7]?|[4-7][0-7]?|.|$)"
    }
  }
}
