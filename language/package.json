{
  "name": "language",
  "version": "1.0.0",
  "description": "",
  "engines": {
    "vscode": "^1.90.0"
  },
  "main": "./out/extension/main.js",
  "type": "module",
  "scripts": {
    "langium:generate": "langium generate",
    "build": "tsc -b",
    "watch": "tsc -b -w",
    "vscode:prepublish": "npm run build"
  },
  "contributes": {
    "languages": [
      {
        "id": "iop",
        "aliases": [
          "IOP",
          "IOP Intent"
        ],
        "extensions": [
          ".intent"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "iop",
        "scopeName": "source.iop",
        "path": "./syntaxes/iop.tmLanguage.json"
      }
    ]
  },
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@types/vscode": "^1.107.0",
    "langium": "^4.1.3",
    "langium-cli": "^4.1.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1"
  }
}
